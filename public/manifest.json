{
  "name": "timatra WorkitemHelper - BrowserExtension",
  "version": "1.0.3",
  "manifest_version": 5,
  "icons": {
    "16": "timatra-logo-16.png",
    "32": "timatra-logo-32.png",
    "48": "timatra-logo-48.png",
    "128": "timatra-logo-128.png"
  },
  "action": {
    "default_title": "timatra WorkitemHelper",
    "default_popup": "/src/popup/index.html"
  },
  "background": {
    "service_worker": "/assets/background.js"
  },
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": [
    "http://localhost:5173/",
    "https://*.timatra.de/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.visualstudio.com/*",
        "https://github.com/*",
        "https://support.visual-world.de/*"
    ],
      "js": ["/assets/main-cs.js"]
    }
  ]
}
